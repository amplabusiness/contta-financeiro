# ==========================================
# SUPABASE
# ==========================================
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_PUBLISHABLE_KEY=your-publishable-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ==========================================
# AI - LOVABLE API (Google Gemini)
# ==========================================
LOVABLE_API_KEY=your-lovable-api-key

# ==========================================
# BANCO CORA - Banking API
# ==========================================
CORA_CLIENT_ID=your-cora-client-id
CORA_CLIENT_SECRET=your-cora-client-secret
CORA_API_URL=https://api.cora.com.br
CORA_WEBHOOK_SECRET=your-webhook-secret
CORA_CERTIFICATE_PATH=/path/to/certificate.pem

# ==========================================
# OPEN FINANCE - PLUGGY
# ==========================================
PLUGGY_CLIENT_ID=your-pluggy-client-id
PLUGGY_CLIENT_SECRET=your-pluggy-client-secret
PLUGGY_API_URL=https://api.pluggy.ai

# ==========================================
# EMAIL - SENDGRID
# ==========================================
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@yourcompany.com
SENDGRID_FROM_NAME=Your Company Name

# ==========================================
# WHATSAPP - EVOLUTION API
# ==========================================
EVOLUTION_API_URL=https://your-evolution-instance.com
EVOLUTION_API_KEY=your-evolution-api-key
EVOLUTION_INSTANCE_NAME=your-instance-name

# ==========================================
# SMS - TWILIO
# ==========================================
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+5511999999999

# ==========================================
# OCR - GOOGLE VISION API
# ==========================================
GOOGLE_VISION_API_KEY=your-google-vision-api-key
GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json

# ==========================================
# ASSINATURA DIGITAL - CLICKSIGN
# ==========================================
CLICKSIGN_API_KEY=your-clicksign-api-key
CLICKSIGN_API_URL=https://api.clicksign.com

# ==========================================
# CONSULTA CNPJ - RECEITAWS / BRASIL API
# ==========================================
RECEITAWS_API_URL=https://www.receitaws.com.br/v1
BRASILAPI_URL=https://brasilapi.com.br/api

# ==========================================
# MCP SERVERS (Model Context Protocol)
# ==========================================
CONTEXT7_API_KEY=your-context7-api-key
GITHUB_TOKEN=your-github-token

# ==========================================
# WEBHOOK URLS
# ==========================================
CORA_WEBHOOK_URL=https://your-project.supabase.co/functions/v1/cora-webhook-handler
PLUGGY_WEBHOOK_URL=https://your-project.supabase.co/functions/v1/pluggy-webhook-handler

# ==========================================
# APPLICATION SETTINGS
# ==========================================
APP_NAME=Sistema de Honorários Contábeis
APP_URL=https://yourapp.com
CLIENT_PORTAL_URL=https://portal.yourapp.com

# ==========================================
# ENCRYPTION & SECURITY
# ==========================================
ENCRYPTION_KEY=your-32-character-encryption-key
JWT_SECRET=your-jwt-secret-key

# ==========================================
# FEATURE FLAGS
# ==========================================
ENABLE_AI_AGENTS=true
ENABLE_OPEN_FINANCE=true
ENABLE_WHATSAPP=true
ENABLE_OCR=true
ENABLE_WORKFLOWS=true

# ==========================================
# RATE LIMITING
# ==========================================
AI_RATE_LIMIT_PER_MINUTE=10
API_RATE_LIMIT_PER_MINUTE=100

# ==========================================
# STORAGE
# ==========================================
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=.pdf,.jpg,.png,.xml,.csv,.ofx,.cnab

# ==========================================
# CRON JOBS (for automation-scheduler)
# ==========================================
ENABLE_DAILY_SYNC=true
ENABLE_AUTO_RECONCILIATION=true
ENABLE_AUTO_COBRANCA=true
